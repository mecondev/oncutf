/* ===============================
   SCROLL BARS
   =============================== */
QScrollBar:vertical, QScrollBar:horizontal {
    background: #2d2d2d;
    margin: 1px;
}

QScrollBar::handle:vertical, QScrollBar::handle:horizontal {
    background: #555555;
    border-radius: 6px;
    min-height: 20px;
    min-width: 20px;
}

QScrollBar::sub-line, QScrollBar::add-line {
    background:none;
    border: none;
    width: 0px;
    height: 0px;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical,
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/* ===============================
   LABELS, GROUPS, FRAMES
   =============================== */
QGroupBox {
    border: 1px solid #3c3c3c;
    margin-top: 6px;
    font-weight: bold;
    padding: 4px;
}

QLabel {
    color: #cccccc;
}

QFrame#footerSeparator {
    color: #555555;
    border-top: 1px solid #555555;
    margin-top: 6px;
    margin-bottom: 4px;
}

QFrame[frameShape="4"] {  /* QFrame::HLine = 4 */
    color: #555555;
    border: 1px solid #555555;
    margin-top: 6px;
    margin-bottom: 4px;
}

QLabel#versionLabel {
    padding-left: 6px;
    font-size: 11px;
    color: #888888;
}

/* ===============================
   TOOLTIP
   =============================== */
QToolTip {
    background-color: #444444;
    color: white;
    border: 1px solid #666666;
    padding: 4px;
    border-radius: 4px;
}

/* ===============================
   CHECKBOXES

   =============================== */

QCheckBox {
    spacing: 6px;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
}

