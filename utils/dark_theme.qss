/* ===============================
   PROGRESS BAR
   =============================== */

QProgressBar {
    border: none;
    border-radius: 4px;
    background-color: #1e1e1e;
    text-align: center;
    color: #ccc;
    height: 10px;
}

QProgressBar::chunk {
    background-color: #007acc;
    border-radius: 4px;
}
